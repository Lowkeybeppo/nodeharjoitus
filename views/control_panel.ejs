<html>
  <body>
    <h1>Control Panel</h1>
    <p>Below are registered users. Use the forms to edit or delete a user. Each action requires the admin password.</p>

    <table border="1" cellpadding="6">
      <tr>
        <th>Username</th>
        <th>Actions</th>
      </tr>
      <% users.forEach(function(u) { %>
        <tr>
          <td><%= u.username %></td>
          <td>
            <form method="get" action="/control/edit/<%= encodeURIComponent(u.username) %>" style="display:inline">
              <button type="submit">Edit</button>
            </form>

            <form method="post" action="/control/delete/<%= encodeURIComponent(u.username) %>" style="display:inline">
              <input type="password" name="adminPassword" placeholder="admin password" required>
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </table>

    <p><a href="/login">Back to login</a></p>
  </body>
</html>
